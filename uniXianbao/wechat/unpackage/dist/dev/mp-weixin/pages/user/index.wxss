/* 提示窗口 */
.uni-custom .uni-tip {

  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;

  width: 300px;
  background-color: #fff;
  border-radius: 10px;
}
.uni-custom .uni-tip-title {
  margin: 35rpx 0 20rpx;
  text-align: center;
  font-weight: bold;
  font-size: 16px;
  color: #333;
}
.uni-custom .uni-tip-content {
  padding: 30rpx;
  text-align: center;
  font-size: 14px;
  color: #666;
  line-height: 1;
}
.uni-custom .uni-tip-group-button {

  display: -webkit-box;
  display: -webkit-flex;
  display: flex;

  margin-top: 20rpx;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.uni-custom .uni-tip-button {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  border-top: 1px solid #ebebeb;
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #3b4144;
}
.uni-custom .uni-tip-button:first-child {
  border-right: 1px solid #ebebeb;
}
.uni-custom .uni-tip-button:last-child {
  color: #f59a23;
}
