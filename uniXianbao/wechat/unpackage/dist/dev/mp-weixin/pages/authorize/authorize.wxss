.authorize {
  padding-top: 20rpx;
}
.authorize .input-group {
  margin: 0 24rpx;
  background: #FFF;
  border-radius: 15rpx;
  padding: 0 36rpx;
}
.authorize .input-group .input-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 1rpx solid #d9d9d9;
}
.authorize .input-group .input-item view {
  height: 88rpx;
  font-size: 28rpx;
  color: #414141;
  line-height: 88rpx;
}
.authorize .input-group .input-item input {
  height: 88rpx;
  margin-left: 32rpx;
  font-size: 24rpx;
}
.authorize .input-group .input-item input::-webkit-input-placeholder {
  color: #989898;
  font-size: 24rpx;
}
.authorize .input-group .input-item:last-child {
  border: 0;
}
.authorize .btn-group {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 30rpx 24rpx;
}
.authorize .btn-group view {
  color: #FFF;
  width: 342rpx;
  height: 65rpx;
  background: #bea577;
  line-height: 65rpx;
  text-align: center;
  border-radius: 8rpx;
}
.popup {
  overflow: hidden;
  width: 650rpx;
  font-size: 30rpx;
  color: #333333;
  background: #FFF;
  min-height: 480rpx;
  border-radius: 20rpx;
}
.popup .pop-tit {
  text-align: center;
  margin: 45rpx 0;
}
.success {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 220rpx;
  box-sizing: border-box;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
  font-size: 36rpx;
  background: #FFF;
  border-radius: 20rpx;
  color: #333333;
  width: 650rpx;
}
.success image {
  width: 45rpx;
  height: 42rpx;
}

