.add .product-list {
  padding: 0 30rpx;
}
.add .product-list view {
  width: 214rpx;
  height: 214rpx;
  background: #cbcbcb;
  float: left;
  margin-left: 24rpx;
  border-radius: 6rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  position: relative;
}
.add .product-list view .check {
  position: absolute;
  width: 33rpx;
  height: 33rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  color: #FFF;
  line-height: 33rpx;
  text-align: center;
  font-size: 25rpx;
  right: 10rpx;
  top: 10rpx;
  overflow: hidden;
}
.add .product-list view image {
  width: 214rpx;
  height: 214rpx;
}
.add .product-list view:first-child {
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add .product-list view:first-child image {
  width: 48rpx;
  height: 48rpx;
}
.add .product-list view:nth-child(3n+1) {
  margin: 0;
}
.add .bottom-btn {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  height: 84rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.add .bottom-btn view {
  height: 84rpx;
  width: 342rpx;
  border-radius: 8rpx;
  background: linear-gradient(to right, #3ae0bf, #0fa1c0);
  font-size: 34rpx;
  text-align: center;
  line-height: 84rpx;
  color: #FFF;
}
