.login-body .log {
  width: 250rpx;
  height: 250rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 310rpx auto 174rpx;
  border-radius: 14rpx;
  background: linear-gradient(to left, #4fa6bd, #6dd7c0);
}
.login-body .log image {
  width: 189rpx;
  height: 158rpx;
}
.login-body .input-item {
  width: 640rpx;
  margin: 20rpx auto;
}
.login-body .login-btn {
  width: 574rpx;
  color: #FFF;
  text-align: center;
  height: 88rpx;
  margin: 0 auto;
  font-size: 30rpx;
  line-height: 88rpx;
  border-radius: 10rpx;
  letter-spacing: 5rpx;
  background: linear-gradient(to left, #4fa6bd, #6dd7c0);
}
.phone-tit {
  margin: 100rpx 30rpx 50rpx;
  text-align: center;
  font-size: 40rpx;
}
.get-phone {
  width: 426rpx;
  height: 87rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 87rpx;
  color: #FFF;
  background: linear-gradient(to left, #4fa7bd, #6ed8c0);
  margin: 0 auto;
}
.input-item {
  width: 578rpx;
  margin: 20rpx auto;
  height: 800rpx;
  position: relative;
}
.input-item > image {
  width: 578rpx;
  height: 800rpx;
  position: absolute;
  z-index: -1;
}
.input-item .input-content .image {
  margin: 0 42rpx;
  height: 242rpx;
  border-bottom: 1rpx dashed #c2c2c2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.input-item .input-content .image image {
  width: 93rpx;
  height: 80rpx;
}
.input-item .input-content .text view:first-child {
  text-align: center;
  font-size: 32rpx;
  color: #2d2d2d;
  margin: 110rpx 0 32rpx;
}
.input-item .input-content .text input {
  display: block;
  width: 426rpx;
  height: 84rpx;
  border-radius: 10rpx;
  background: #f5f5f5;
  margin: 0 auto 68rpx;
  box-sizing: border-box;
  text-align: center;
  padding-left: 20rpx;
  font-size: #353535;
}
.input-item .input-content .text view:last-child {
  width: 426rpx;
  height: 87rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 87rpx;
  color: #FFF;
  background: linear-gradient(to left, #4fa7bd, #6ed8c0);
  margin: 0 auto;
}
